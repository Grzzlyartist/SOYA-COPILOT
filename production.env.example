# Production Environment Variables for Soya Copilot
# Copy this file to .env and fill in your actual values

# AI Model API Keys
GROQ_API_KEY=your_groq_api_key_here

# Weather API
OPENWEATHER_API_KEY=your_openweather_api_key_here

# WhatsApp/Twilio Integration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_whatsapp_number

# Application Settings
CHROMADB_PATH=./data/chromadb
MODEL_PATH=./data/models/yolov8_soybean.pt
MAX_MEMORY=4
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LLM_MODEL=llama-3.1-8b-instant

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
WHATSAPP_BOT_PORT=5000
STREAMLIT_PORT=8501

# Production Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
WORKERS=4

# Security (generate secure random strings)
SECRET_KEY=your_secret_key_here_generate_a_secure_random_string
JWT_SECRET=your_jwt_secret_here_generate_a_secure_random_string

# Database (if using external database)
# DATABASE_URL=postgresql://user:password@localhost:5432/soya_copilot

# Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_PORT=9090